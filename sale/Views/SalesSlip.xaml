                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" 
                           HorizontalAlignment="Center"
                           FontSize="20"
                           Text="{Binding UpperTitle}"/>
                    <StackPanel Grid.Column="2"
                            HorizontalAlignment="Right">
                        <TextBlock Text="{Binding SaleDate, StringFormat='yyyy/MM/dd'}"/>
                        <TextBlock Text="{Binding SaleNo, StringFormat='S#\{0\}'}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="32"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding CustomerZipCode, StringFormat='〒 \{0\}'}"/>
                        <TextBlock Grid.Row="1" Text="{Binding CustomerAddress}"/>
                        <TextBlock Grid.Row="2" Text="{Binding CustomerName, StringFormat='\{0\} 御中'}"/>

                    </Grid>
                    <Image Grid.Column="2" 
                           Source="{StaticResource IconImage}"
                           Stretch="Uniform"
                           Width="32" Height="32" />

                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="〒990-8668"/>
                        <TextBlock Grid.Row="1" Text="山形県山形市流通センター１丁目"/>
                        <TextBlock Grid.Row="2" Text="カテケロ株式会社"/>
                    </Grid>

                </Grid>

