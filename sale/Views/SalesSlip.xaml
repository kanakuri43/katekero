                                    <Style TargetType="GridViewColumnHeader">
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Style>
                                </GridViewColumn.HeaderContainerStyle>
                            </GridViewColumn>
                            <GridViewColumn Header="数量" Width="80">
